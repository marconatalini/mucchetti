{% extends 'emails/baseEmail.html.twig' %}

{% block content %}
    {% set employee = permit.employee %}
    {% set boss = permit.employee.parentUser %}

    <spacer size="20"></spacer>
    <row>
        <columns>
            <p>
                {{ permit.employee }} ha inoltrato la seguente richiesta di {{ permit.permitType|trans }}:
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <table>
                <tr>
                    <th>#</th>
                    <th>Inizio</th>
                    <th>Fine</th>
                </tr>
                <tr>
                    <td>{{ permit.id }}</td>
                    <td>{{ permit.startAt | date('d.m.Y H:i') }}</td>
                    <td>{{ permit.endAt | date('d.m.Y H:i') }}</td>
                </tr>
            </table>
        </columns>
    </row>
    <row>
        <columns>
            <p>Clicca qui per approvare o respingere la richiesta. Una mail sar√† inviata automaticamente all'ufficio personale o al dipendente.</p>
        </columns>
    </row>
    <row>
        <columns>
            <button class="success" href="{{ url('app_permit_action', {action: 'approve', id: permit.id}) }}">Approva</button>
        </columns>
        <columns>
            <button class="danger" href="{{ url('app_permit_action', {action: 'reject', id: permit.id}) }}">Rifiuta</button>
        </columns>
        <columns class="expander"></columns>
    </row>

{% endblock %}

