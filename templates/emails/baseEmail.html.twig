{% apply inky_to_html | inline_css(
    source('@styles/foundation-emails.css'),
    source('@styles/email.css')
    ) %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="it">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{% block title %}{% endblock %}</title>
{#  <link rel="stylesheet" href="css/foundation-emails.css" />#}
</head>

<body>
  <!-- <style> -->
  <table class="body" data-made-with-foundation>
    <tr>
      <td class="float-center" align="center" valign="top">
        <center>
            <container>
                <row class="header">
                    <columns>
                        <a href="{{ url('app_home') }}">
                            <img src="{{ email.image('@images/logo_europrofili.svg') }}" class="logo" alt="Europrofili Logo">
                        </a>
                    </columns>
                </row>
                <row class="welcome">
                    <columns>
                        <spacer size="25"></spacer>
                        <h1>
                            <center>
                                Buongiorno {{ email.toName }}!
                            </center>
                        </h1>
                        <spacer size="5"></spacer>
                    </columns>
                </row>
                {#        <spacer size="30"></spacer>#}
                {% block content %}
                {% endblock %}
                <hr>
                <row class="footer">
                    <columns>
                        <p>Questa è mail automatica. Non rispondere, la casella non è monitorata.</p>
                    </columns>
                </row>
                <row class="bottom">
                    <columns>
                        <center>
                            <spacer size="20"></spacer>
                            <div>
                                Spedita col ❤️ dal sistema permessi ufficio tecnico creato da Marco Natalini (C) 2025
                            </div>
                        </center>
                    </columns>
                </row>
            </container>
        </center>
      </td>
    </tr>
  </table>
</body>
</html>

{% endapply %}
