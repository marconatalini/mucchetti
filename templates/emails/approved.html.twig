{% extends 'emails/baseEmail.html.twig' %}

{% block content %}
    {% set employee = permit.employee %}
    {% set boss = permit.employee.parentUser %}

    <spacer size="20"></spacer>
    <row>
        <columns>
            <p>
                {{ permit.employee }} ha inoltrato la seguente richiesta di {{ permit.permitType|trans }}:
            </p>
        </columns>
    </row>
    <row>
        <columns>
            <table>
                <tr>
                    <th>#</th>
                    <th>Inizio</th>
                    <th>Fine</th>
                </tr>
                <tr>
                    <td>{{ permit.id }}</td>
                    <td>{{ permit.startAt | date('d.m.Y H:i') }}</td>
                    <td>{{ permit.endAt | date('d.m.Y H:i') }}</td>
                </tr>
            </table>
        </columns>
    </row>
    <row>
        <columns>
            <p>La richiesta Ã¨ stata <strong>APPROVATA</strong> da {{ boss }} in data {{ permit.evaluatedAt | date('d.m.Y H:i')}} </p>
        </columns>
    </row>
    <row>
        <columns>
            <button class="success" href="{{ url('app_permit_register', {id: permit.id}) }}">OK, registrato</button>
        </columns>
        <columns class="expander"></columns>
    </row>

{% endblock %}

